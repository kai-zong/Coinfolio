generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id             Int         @id @default(autoincrement())
  email          String      @unique
  auth0Id        String      @unique @default("")
  name           String?
  transactions   Transaction[]
}

model Coin {
  id             Int          @id
  symbol         String       
  name           String 
  image          String?
  transactions   Transaction[] // This assumes a transaction is associated with a specific coin
}

model Transaction {
  id             Int       @id @default(autoincrement())
  userId    Int
  coinId         Int
  coin           Coin      @relation(fields: [coinId], references: [id])
  coinPriceCost  Float
  transferIn     Boolean   @default(true)
  amount         Float
  amountInUSD    Float
  user      User @relation(fields: [userId], references: [id])
}
